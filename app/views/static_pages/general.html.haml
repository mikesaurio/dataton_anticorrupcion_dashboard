/ Page Wrapper
#wrapper
  / Sidebar
  %ul#accordionSidebar.navbar-nav.bg-gradient-primary.sidebar.sidebar-dark.accordion
    / Sidebar - Brand
    =render "shared/sidebar"

  / Content Wrapper
  #content-wrapper.d-flex.flex-column
    / Main Content
    #content
      / Begin Page Content
      .container-fluid.top-page
        / Page Heading
        .d-sm-flex.align-items-center.justify-content-between.mb-4
          %h1.h3.mb-0.text-gray-800 General
          %a.d-none.d-sm-inline-block.btn.btn-sm.btn-primary.shadow-sm{:href => "#"}
            %i.fas.fa-download.fa-sm.text-white-50
            Descargar datos
        / Content Row
        .row
          / Earnings (Monthly) Card Example
          .col-xl-6.col-md-6.mb-6
            .card.border-left-primary.shadow.h-100.py-2
              .card-body
                .row.no-gutters.align-items-center
                  .col.mr-2
                    .text-xs.font-weight-bold.text-primary.text-uppercase.mb-1 Número de participantes
                    .h5.mb-0.font-weight-bold.text-gray-800 96,449
                  .col-auto
                    %i.fas.fa-table.fa-2x.text-gray-300
          / Earnings (Monthly) Card Example
          .col-xl-6.col-md-6.mb-6
            .card.border-left-success.shadow.h-100.py-2
              .card-body
                .row.no-gutters.align-items-center
                  .col.mr-2
                    .text-xs.font-weight-bold.text-success.text-uppercase.mb-1 Número de ganadores
                    .h5.mb-0.font-weight-bold.text-gray-800 86,139
                  .col-auto
                    %i.fas.fa-hashtag.fa-2x.text-gray-300

        /Content Row
        .row.top-page
          / Area Chart
          .col-xl-12.col-lg-12
            .card.shadow.mb-4
              / Card Header - Dropdown
              .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                %h6.m-0.font-weight-bold.text-primary Contratos vs ganado
              / Card Body
              .card-body.long
                .chart-area
                  %iframe{:src => "#{@root_url}/diconsa.html", width: "100%", height: "600px"}

        /Content Row
        .row
          / Area Chart
          .col-xl-12.col-lg-12
            .card.shadow.mb-4
              / Card Header - Dropdown
              .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                %h6.m-0.font-weight-bold.text-primary Contratos vs ganado
              / Card Body
              .card-body.long
                .chart-area
                  %iframe{:src => "#{@root_url}/cfe_contratos.html", width: "100%", height: "600px"}

        / Content Row
        .row
          / Area Chart
          .col-xl-12.col-lg-12
            .card.shadow.mb-4
              / Card Header - Dropdown
              .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                %h6.m-0.font-weight-bold.text-primary Licitaciones VS Adjudicaciones
              / Card Body
              .card-body.long
                .chart-area
                  %iframe{:src => "#{@root_url}/adjudicacion.html", width: "100%", height: "600px"}






    / End of Main Content
    / Footer
    %footer.sticky-footer.bg-white
      .container.my-auto
        .copyright.text-center.my-auto
          %span Dataton anticorrupción 2019
    / End of Footer
  / End of Content Wrapper
/ End of Page Wrapper
/ Scroll to Top Button
%a.scroll-to-top.rounded{:href => "#page-top"}
  %i.fas.fa-angle-up
