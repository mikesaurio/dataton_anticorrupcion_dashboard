/ Page Wrapper
#wrapper
  / Sidebar
  %ul#accordionSidebar.navbar-nav.bg-gradient-primary.sidebar.sidebar-dark.accordion
    / Sidebar - Brand
    =render "shared/sidebar"

  / Content Wrapper
  #content-wrapper.d-flex.flex-column
    / Main Content
    #content

      / Begin Page Content
      .container-fluid.top-page
        / Page Heading
        .d-sm-flex.align-items-center.justify-content-between.mb-4
          %h1.h3.mb-0.text-gray-800 Precios de referencia
          %a.d-none.d-sm-inline-block.btn.btn-sm.btn-primary.shadow-sm{:href => "#"}
            %i.fas.fa-download.fa-sm.text-white-50
            Descargar datos
        / Content Row
        .row
          / Earnings (Monthly) Card Example
          .col-xl-3.col-md-6.mb-4
            .card.border-left-primary.shadow.h-100.py-2
              .card-body
                .row.no-gutters.align-items-center
                  .col.mr-2
                    .text-xs.font-weight-bold.text-primary.text-uppercase.mb-1 Datasets utilizados
                    .h5.mb-0.font-weight-bold.text-gray-800 4
                  .col-auto
                    %i.fas.fa-calendar.fa-2x.text-gray-300
          / Earnings (Monthly) Card Example
          .col-xl-3.col-md-6.mb-4
            .card.border-left-success.shadow.h-100.py-2
              .card-body
                .row.no-gutters.align-items-center
                  .col.mr-2
                    .text-xs.font-weight-bold.text-success.text-uppercase.mb-1 Número de empresas
                    .h5.mb-0.font-weight-bold.text-gray-800 19,023
                  .col-auto
                    %i.fas.fa-dollar-sign.fa-2x.text-gray-300
          / Earnings (Monthly) Card Example
          .col-xl-3.col-md-6.mb-4
            .card.border-left-info.shadow.h-100.py-2
              .card-body
                .row.no-gutters.align-items-center
                  .col.mr-2
                    .text-xs.font-weight-bold.text-info.text-uppercase.mb-1 Peso total de
                    .row.no-gutters.align-items-center
                      .col-auto
                        .h5.mb-0.mr-3.font-weight-bold.text-gray-800 50%
                      .col
                        .progress.progress-sm.mr-2
                          .progress-bar.bg-info{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "50", :role => "progressbar", :style => "width: 50%"}
                  .col-auto
                    %i.fas.fa-clipboard-list.fa-2x.text-gray-300
          / Pending Requests Card Example
          .col-xl-3.col-md-6.mb-4
            .card.border-left-warning.shadow.h-100.py-2
              .card-body
                .row.no-gutters.align-items-center
                  .col.mr-2
                    .text-xs.font-weight-bold.text-warning.text-uppercase.mb-1 Pending Requests
                    .h5.mb-0.font-weight-bold.text-gray-800 18
                  .col-auto
                    %i.fas.fa-comments.fa-2x.text-gray-300

        / Content Row
        .row
          / Area Chart
          .col-xl-12.col-lg-12
            .card.shadow.mb-4
              / Card Header - Dropdown
              .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                %h6.m-0.font-weight-bold.text-primary Earnings Overview
              / Card Body
              .card-body.long
                .chart-area
                  =image_tag "top_sobreprecio.png", class: "img-dashboard-2"


    / End of Main Content
    / Footer
    %footer.sticky-footer.bg-white
      .container.my-auto
        .copyright.text-center.my-auto
          %span Dataton anticorrupción 2019
    / End of Footer
  / End of Content Wrapper
/ End of Page Wrapper
/ Scroll to Top Button
%a.scroll-to-top.rounded{:href => "#page-top"}
  %i.fas.fa-angle-up
